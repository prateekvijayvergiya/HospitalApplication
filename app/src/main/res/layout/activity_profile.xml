<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/profileAppBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profileAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Others"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
            </android.support.design.widget.TextInputLayout>

            //Gender
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/md_black_1000"
                    android:text="Gender "/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/gender_buttons">
                    <RadioButton
                        android:id="@+id/gender_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Male"
                        android:onClick="isSelected"/>
                    <RadioButton
                        android:id="@+id/gender_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Female"
                        android:onClick="isSelected"/>
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"/>

            <Spinner
                android:id="@+id/blood_group"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:clickable="false"
                android:layout_margin="10dp"
                android:contextClickable="false"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:maxLines="1"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="15dp"
                android:clickable="false"
                android:singleLine="true"
                android:contextClickable="false"
                android:text="Date of Birth: 2017-05-18"
                android:gravity="center"
                android:textIsSelectable="false"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:contextClickable="false"
                    android:clickable="false"
                    android:layout_margin="10dp"
                    android:textIsSelectable="false"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:contextClickable="false"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:clickable="false"
                    android:textIsSelectable="false"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text="408 Hiran Magri Sector 4,Udaipur"
                    android:gravity="center" />


           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
               android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:contextClickable="false"
                    android:clickable="false"
                    android:textIsSelectable="false"/>
                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Udaipur"
                    android:clickable="false"
                    android:elevation="4dp"
                    android:contextClickable="false"
                    android:textIsSelectable="false"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:textIsSelectable="false"/>
                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Rajasthan"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:textIsSelectable="false"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:contextClickable="false"
                        android:clickable="false"
                        android:textIsSelectable="false"/>
                    <EditText
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="India"
                        android:elevation="4dp"
                        android:contextClickable="false"
                        android:clickable="false"
                        android:textIsSelectable="false"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        android:contextClickable="false"
                        android:clickable="false"
                        android:textIsSelectable="false"/>
                    <EditText
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="302022"
                        android:contextClickable="false"
                        android:clickable="false"
                        android:textIsSelectable="false"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>